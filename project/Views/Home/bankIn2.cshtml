@model projectWith中佑.Models.Store
<div style="min-height:800px">
    <div class="container" style="background-color:white;position:relative;top:30px;width:700px;height:450px">

        <div class="row">
            <div class="stepwizard">
                <div class="stepwizard-row">
                    <div class="stepwizard-step">
                        <a class="btn btn-default  btn-circle " disabled="disabled" href="#step-1" data-toggle="tab">1</a>
                        <p>選擇儲值方式</p>
                    </div>
                    <div class="stepwizard-step">
                        <a class="btn btn-primary btn-circle active-step " href="#step-2" data-toggle="tab">2</a>
                        <p>確認儲值</p>
                    </div>
                    <div class="stepwizard-step">
                        <a class="btn btn-default btn-circle" disabled="disabled" href="#step-3" data-toggle="tab">3</a>
                        <p>付款</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="rate-updates">
            <div class="margintop0" style="border: none !important;">
                <div class="margintop20" style="border: none !important;">

                    <div class="tab-pane fade active in padding20" id="step-1">
                        <form class="form-horizontal" style="position:relative;top:100px;left:45px;font-size:15px"method="post"action="/Home/bankIn3">
                            <fieldset>
                                <!-- Select Basic -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="storeProgram">儲值方案</label>
                                    <div class="col-md-4">
                                        <input id="storeProgram" name="storeProgram" type="text" class="form-control input-md" readonly value="@Model.storeProgram">

                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="storePoint">儲值點數</label>
                                    <div class="col-md-4">
                                        <input id="storePoint" name="storePoint" type="text" class="form-control input-md" readonly value="@Model.storePoint">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="storeValue">MyCard點數</label>
                                    <div class="col-md-4">
                                        <input id="storeValue" name="storeValue" type="text" class="form-control input-md" readonly value="@Model.storeValue">

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="storeMethod" id="MyCardNumberaccess">卡號輸入</label>
                                    <div class="col-md-4">
                                        <input id="MyCardNumber" name="MyCardNumber" type="text" class="form-control input-md"  value="">

                                    </div>
                                </div>
                                
                                <input id="storeMethod" name="storeMethod" type="hidden" class="form-control input-md" value="MyCard點數">
                                <input id="memberId" name="memberId" type="hidden" class="form-control input-md" value="@Session["memberId"]" readonly>
                                <input id="storeId" name="storeId" type="hidden" class="form-control input-md" readonly value="@DateTime.Now.ToString("yyyyMMddhhmm")@String.Format("{0:0000}{1:000}",Session["memberId"],0+Model.storeProgram)">                           
                             </fieldset>
                            <div class="align-center" style="position:relative;top:1px;left:230px;margin-bottom:10px">
                             
                                <button class="btn btn-lg btn-success " onclick="javascript: location.href ='/Home/bankIn3'" type="submit" style="width:205px;margin-bottom:5px"><i class="icon-next"></i>確認</button><br/>
                                <button class="btn btn-lg btn-success" onclick="history.back()" type="button"style="width:205px"><i class="icon-next"></i>回上頁</button>
                            </div>
                         </form>
                    </div>
                 
                </div>
            </div>
        </div>

    </div>
</div>



<script>
    $("#MyCardNumberaccess").click(function () {
        document.getElementById("MyCardNumber").value = "APt0530Zzfd097Ti50a5";



    });
</script>