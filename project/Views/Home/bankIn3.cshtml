@model projectWith中佑.Models.Store
@{
    ViewBag.Title = "bankIn3";
}
<div style="min-height:800px">
    <div class="container" style="background-color:white;position:relative;top:30px;width:700px;height:450px">
        <div class="row">
            <div class="stepwizard">
                <div class="stepwizard-row">
                    <div class="stepwizard-step">
                        <a class="btn btn-default btn-circle" disabled="disabled" href="#step-1" data-toggle="tab">1</a>
                        <p>選擇儲值方式</p>
                    </div>
                    <div class="stepwizard-step">
                        <a class="btn btn-default btn-circle" disabled="disabled" href="#step-2" data-toggle="tab">2</a>
                        <p>確認儲值</p>
                    </div>
                    <div class="stepwizard-step">
                        <a class="btn btn-danger btn-circle active-step" " href="#step-3" data-toggle="tab">3</a>
                        <p>付款</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="rate-updates">

            <div class="margintop0" style="border: none !important;">
                <div class="margintop20" style="border: none !important;">
                    <div class="tab-pane fade active in padding20 " id="step-3">
                        <div class="row">



                            <form class="form-horizontal" style="position:relative;top:80px;left:45px;font-size:15px">
                                <fieldset>
                                    <span style="font-size:20px;position:relative;left:260px">恭喜您已儲值成功</span>
                                    <!-- Select Basic -->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="storeId">儲值單號</label>
                                        <div class="col-md-4">
                                            <input id="storeId" name="storeId" type="text" class="form-control input-md" readonly value="@Model.storeId">

                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="ATMAccount">玩家點數</label>
                                        <div class="col-md-4">
                                            <input id="ATMAccount" name="ATMAccount" type="text" class="form-control input-md" readonly value="@Session["memberPocketPoints"]">

                                        </div>
                                    </div>

          

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="branchBank">儲值點數</label>
                                        <div class="col-md-4">
                                            <input id="branchBank" name="branchBank" type="text" class="form-control input-md" readonly value="@Model.storePoint">

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="storeValue">MyCard點數</label>
                                        <div class="col-md-4">
                                            <input id="storeValue" name="storeValue" type="text" class="form-control input-md" readonly value="@Model.storeValue">

                                        </div>
                                    </div>

                           

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for=""></label>
                                        <div class="col-md-4">

                                            <button class="btn btn-success btn-lg" onclick="javascript: location.href = '/Home/storeMoney'" type="button" style="width:213px;top:-10px"><i class="icon-next"></i>回大廳</button>
                                        </div>
                                    </div>

                                </fieldset>
                            </form>

                            <!--<button class="btn btn-xs btn-success" onclick="stepnext(2);" type="button"><i class="icon-next"></i>Previous</button>-->


                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>