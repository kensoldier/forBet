
@{
    ViewBag.Title = "bankOot";
}




<div class="container" style="background-color:white;position:relative;top:50px;width:700px;height:550px">
    <div class="row">
        <div class="stepwizard">

            <div class="stepwizard-row">
                <div class="stepwizard-step">
                    <a class="btn btn-primary  btn-circle " href="#step-1" data-toggle="tab">1</a>
                    <p>出金</p>
                </div>
                <div class="stepwizard-step">
                    <a class="btn btn-default btn-circle" disabled="disabled" href="#step-2" data-toggle="tab">2</a>
                    <p>出金確認</p>
                </div>
                <div class="stepwizard-step">
                    <a class="btn btn-default btn-circle" disabled="disabled" href="#step-3" data-toggle="tab">3</a>
                    <p>結果結果</p>
                </div>
            </div>
        </div>
    </div>


    <div class="rate-updates">
        <div class="tab-content margintop0" style="border: none !important;">
            <div class="tab-content  margintop20" style="border: none !important;">

                <div class="tab-pane fade active in padding20" id="step-1">
                    <form class="form-horizontal" style="position:relative;top:90px">
                        <fieldset>
                            <!-- Select Basic -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="program">銀行住戶:</label>
                                <div class="col-md-4">
                                    <select id="program" name="program" class="form-control">
                                        <option value="1">銀行一</option>
                                        <option value="2">銀行二</option>
                                        <option value="3">銀行三</option>
                                        <option value="4">銀行四</option>
                                    </select>
                                </div>
                            </div>

                            <!-- new bank account -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="program"></label>
                                <div class="col-md-4">
                                    <a href="" id="newItem" class="btn" data-toggle="modal" data-target="#newBankAccount2">新增銀行密碼</a><br />
                                </div>
                            </div>
                            <!-- input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="output">輸出金額:</label>
                                <div class="col-md-4">
                                    <input id="output" name="output" type="text" placeholder="" class="form-control input-md">
                                   
                                </div>
                            </div>


                            <!-- Table-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="program">餘額:</label>
                                <div class="col-md-4">
                                    <a  id="newItem" class="btn">0000000</a><br />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="program">輸出金額:</label>
                                <div class="col-md-4">
                                    <a id="newItem" class="btn">0000000</a><br />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="program">收續費:</label>
                                <div class="col-md-4">
                                    <a id="newItem" class="btn">0000000</a><br />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="program">最後轉出金額:</label>
                                <div class="col-md-4">
                                    <a id="newItem" class="btn">0000000</a><br />
                                </div>
                            </div>
                      
                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="storePassword">密碼密碼:</label>
                                <div class="col-md-4">
                                    <input id="storePassword" name="storePassword" type="text" placeholder="請輸入儲值密碼" class="form-control input-md" required="">

                                </div>
                            </div>

                        </fieldset>
                    </form>
                </div>
                <div class="align-center" style="position:relative;top:50px">
                    
                    <button class="btn btn-xs btn-success " onclick="javascript: location.href ='/Home/bankOut2'" type="button" style="width:200px"><i class="icon-next"></i>下一步</button>
                </div>
            </div>
        </div>
    </div>

</div>


<div id="newBankAccount2" class="modal fade " role="dialog" style="position:fixed;top:50px;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>增新銀行帳戶</h4>
                <div class="align-center">
                    <form class="form-horizontal ">
                        <fieldset>


                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="name">真實姓名</label>
                                <div class="col-md-4">
                                    <input id="name" name="name" type="text" placeholder="請輸入名字" class="form-control input-md" required="">

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="bankCode">銀行代碼</label>
                                <div class="col-md-4">
                                    <input id="bankCode" name="bankCode" type="text" placeholder="" class="form-control input-md">

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="bankAccount">銀行帳號</label>
                                <div class="col-md-4">
                                    <input id="bankAccount" name="bankAccount" type="text" placeholder="" class="form-control input-md">

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="bankName">分行名稱</label>
                                <div class="col-md-4">
                                    <input id="bankName" name="bankName" type="text" placeholder="" class="form-control input-md">

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="password">提款密碼</label>
                                <div class="col-md-4">
                                    <input id="password" name="password" type="text" placeholder="" class="form-control input-md">

                                </div>
                            </div>

                            <!-- Button (Double) -->
                            <div class="form-group align-center ">


                                <button type="submit" class="btn btn-warning btn-lg " style="width:160px">新增</button>


                            </div>

                        </fieldset>
                    </form>
                    <a href="bankOut">
                        <button class="btn btn-danger btn-lg" style="width:160px;position:relative;top:-35px;left:-5px">取消</button>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>